{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules", "js"]
}
